#include <stdio.h>
#include <string.h>

int main() {
    char line[100];
    printf("Enter a line of code:\n");
    fgets(line, 100, stdin);

    // Check if line is a comment
    if (line[0] == '/' && line[1] == '/') {
        printf("The line is a comment.\n");
    }
    else {
        printf("The line is not a comment.\n");
    }
    
    return 0;
}


